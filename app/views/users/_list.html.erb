<h3>User info</h3>
<%= attachment_image_tag userinfo, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
<table class="table">
  <tbody>
    <tr></tr>
    <tr>
      <th>name</th>
      <th><%= userinfo.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= userinfo.introduction %></th>
    </tr>
  </tbody>
</table>


<div class="row">
  <% if userinfo == current_user %>
    <%= link_to "", edit_user_path(current_user.id), class: 'btn btn-outline-secondary btn-block fas fa-user-cog' %>
  <% else %>
    <%= link_to "", edit_user_path(userinfo.id), class: 'btn btn-outline-secondary btn-block fas fa-user-cog' %>
  <% end %>
</div>

