<div class="container px-5 px-sm-0">
  <%= render 'books/error', book: @newbook %>
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list', userinfo: current_user %>
      <%= render 'books/list', book: @newbook %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h3>Books</h3>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>opinion</th>
            <th colspan="3"></th>
          </tr>
      </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <th>
                <%= link_to user_path(book.user.id) do %>
                <%= attachment_image_tag book.user,:profile_image, :fill, 35, 35, format: 'jpeg', fallback: "no_image.jpg", size:'35x35'%></th>
                <% end %>
              <th><%= link_to book.title, book_path(book) %></th>
              <th><%= book.body %></th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>